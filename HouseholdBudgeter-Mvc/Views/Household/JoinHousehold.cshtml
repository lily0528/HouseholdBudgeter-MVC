@model List<InviteViewModel>

@{
    ViewBag.Title = "JoinHousehold";
}

<h2>JoinHousehold</h2>

<div class="row">
    <div class="col-lg-11">
        <div class="card mb-8">
            @if (Model == null || !Model.Any())
            {
                <div>There are no pending invites</div>
            }
            else
            {
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="card-header">
                        <tr>
                            <th>Household</th>
                            <th>Owner</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.OwnerName</td>
                                <td>
                                    <form action="@Url.Action("JoinHousehold", "Household", new { id = item.HouseholdId })" method="post">
                                        <button type="submit">Join</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
