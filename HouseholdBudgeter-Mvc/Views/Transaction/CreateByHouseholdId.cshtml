@model HouseholdSelectView
@{
    ViewBag.Title = "CreateByHouseholdId";
}

<h2>CreateByHouseholdId</h2>

<form method="post">
    @Html.ValidationSummary(false)
    <div class="form-group">
        @Html.LabelFor(Model => Model.Household, "household:")
        @Html.DropDownList("householdId", Model.Household, "--Select Household--", htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(Model => Model.HouseholdId, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
