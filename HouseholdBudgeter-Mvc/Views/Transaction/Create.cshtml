@model TransactionBindingModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="row">
    <div class="col-lg-11">
        <div class="card mb-8">
            <div class="card-header">
                <i class="fas fa-angle-down"></i>
                Create Transaction
            </div>
            <div class="card-body">
                <form method="post">
                    @*@Html.ValidationSummary(false)*@
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.BankAccount, "BankAccount:")
                        @Html.DropDownList("BankAccountId", Model.BankAccount, "--Select BankAccount--", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(Model => Model.BankAccountId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Category, "Category:")
                        @Html.DropDownList("CategoryId", Model.Category, "--Select Category--", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(Model => Model.CategoryId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(p => p.Title, "Transaction Name:")
                        @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Transaction Title" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(p => p.Amount, "Transaction Amount:")
                        @Html.TextBoxFor(p => p.Amount, new { @class = "form-control", placeholder = "Transaction Title" })
                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Date, "Transaction Date:")
                        @Html.TextBoxFor(p => p.Date, new { @class = "form-control", placeholder = "Transaction Title" })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Description, "Description:")
                        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "Description", rows = 5, columns = 5 })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="card-footer small text-muted">@DateTime.Now</div>
        </div>
    </div>
</div>
