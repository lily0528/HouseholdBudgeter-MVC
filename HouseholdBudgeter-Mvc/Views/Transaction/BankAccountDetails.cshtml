@model List<HouseholdBankAccountDetailView>
@{
    ViewBag.Title = "BankAccountDetails";
}

<div class="card-header">
    <i class="fas fa-list-ul"></i>
    BankAccount List
</div>
<div class="card-body">
    <div class="table-responsive">

        @foreach (var bankAccount in Model)
        {

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" bgcolor="green">
                <tbody>
                    <tr>

                        <td><h3>Account Name:  @bankAccount.Name</h3></td>
                        <td><h3>Blance:  @bankAccount.Balance </h3></td>
                    </tr>
                </tbody>
            </table>

            foreach (var category in bankAccount.Categorys)
            {
                <div>
                    <span><strong>Category Name:  </strong>@category.CategoryName</span><span>&emsp;&emsp;</span>
                    <span><strong>Category Amount:  </strong>@category.CategoryAmount</span>
                </div>


                <table class="table table-bordered" id="dataTable" width="50%" cellspacing="0">
                    <thead class="card-header">
                        <tr>
                            <th>Id</th>
                            <th>Transaction Name</th>
                            <th>Amount</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var transaction in category.Transactions)
                        {
                            <tr>
                                <td>@transaction.Id</td>
                                <td>@transaction.Title</td>
                                <td>@transaction.Amount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }

    </div>
</div>



